                </label>
                <div class="col-md-8 ">
                    <div class="form-control noborder">
                        @Html.ListBox("QAUserList", new MultiSelectList(qaUserList1.ToArray(), "UserID", "UserName"), new { @id = "QAUserList", @Name = "QAUserList", @class = "form-control", @data_selected = Model.LUMQAUser })
                     
                        @Html.HiddenFor(m => m.LUMQAUser)
