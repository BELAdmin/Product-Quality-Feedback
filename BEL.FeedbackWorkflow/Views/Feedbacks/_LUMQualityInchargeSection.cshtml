                    </div>
                </div>
            </div>
        </div>*@
        <div class="col-sm-6">
       <div class="form-group">
            <label class="col-md-4 control-label">
                <span class="text-danger text-default-light">*</span>
                @Html.LabelFor(m => m.LUMQAUser, ResourceNames.Feedbacks)
            </label>
            <div class="col-md-8 ">
                <div class="form-control noborder">
                    @Html.ListBox("QAUserList1", new MultiSelectList(qaUserList1.ToArray(), "UserID", "UserName"), new { @id = "QAUserList1", @Name = "QAUserList1", @class = "form-control", @data_selected = Model.LUMQAUser })

                    @Html.HiddenFor(m => m.LUMQAUser)
                    @Html.HiddenFor(m => m.LUMQAUserName)
                </div>
            </div>
